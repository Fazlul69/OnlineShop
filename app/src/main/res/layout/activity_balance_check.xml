<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BalanceCheckActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/slider_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="Evaly Wallet"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
             <androidx.cardview.widget.CardView
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Balance"
                     android:textColor="#000"
                     android:textSize="18sp"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/balance"
                     android:text="৳ 0.0"
                     android:textColor="#000"
                     android:textSize="25sp"
                     android:layout_marginTop="25dp"/>

             </androidx.cardview.widget.CardView>
             <androidx.cardview.widget.CardView
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text=" Holding Balance"
                     android:textColor="#000"
                     android:textSize="18sp"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/holdingBalance"
                     android:text="৳ 0.0"
                     android:textColor="#000"
                     android:textSize="25sp"
                     android:layout_marginTop="25dp"/>

             </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
             <androidx.cardview.widget.CardView
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Gift Card Balance"
                     android:textColor="#000"
                     android:textSize="18sp"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/gftCardBlnc"
                     android:text="৳ 0.0"
                     android:textColor="#000"
                     android:textSize="25sp"
                     android:layout_marginTop="25dp"/>

             </androidx.cardview.widget.CardView>
             <androidx.cardview.widget.CardView
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text=" Cashback "
                     android:textColor="#000"
                     android:textSize="18sp"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/cashback"
                     android:text="৳ 0.0"
                     android:textColor="#000"
                     android:textSize="25sp"
                     android:layout_marginTop="25dp"/>

             </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>